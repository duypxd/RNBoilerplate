{
  "name": "rnboilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "androidClean": "cd android && ./gradlew clean && cd ..",
    "stagingAPK": "cd android && ./gradlew assembleReleaseStaging && cd ..",
    "UatAPK": "cd android && ./gradlew assembleReleaseUAT && cd ..",
    "SitAPK": "cd android && ./gradlew assembleReleaseSIT && cd ..",
    "releaseAPK": "cd android && ./gradlew assembleRelease && cd ..",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "format": "prettier --write .",
    "pod": "cd ios && pod install && cd .."
  },
  "dependencies": {
    "@react-native-community/async-storage": "1.12.1",
    "@react-native-firebase/app": "11.5.0",
    "@react-native-firebase/messaging": "11.5.0",
    "@react-navigation/bottom-tabs": "6.0.5",
    "@react-navigation/native": "6.0.2",
    "@react-navigation/native-stack": "6.0.6",
    "@reduxjs/toolkit": "^1.6.1",
    "@sentry/react-native": "2.6.2",
    "axios": "^0.21.1",
    "react": "17.0.1",
    "react-native": "0.64.1",
    "react-native-appearance": "0.3.4",
    "react-native-config": "1.4.3",
    "react-native-device-info": "8.3.0",
    "react-native-safe-area-context": "3.3.0",
    "react-native-screens": "3.5.0",
    "react-native-version-check": "3.4.2",
    "react-redux": "^7.2.4",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.9",
    "@babel/runtime": "7.12.5",
    "@react-native-community/eslint-config": "2.0.0",
    "@types/jest": "26.0.23",
    "@types/react-native": "0.64.5",
    "@types/react-test-renderer": "16.9.2",
    "@types/redux-logger": "^3.0.9",
    "babel-jest": "26.6.3",
    "eslint": "7.14.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "7.0.1",
    "jest": "26.6.3",
    "metro-react-native-babel-preset": "0.64.0",
    "prettier": "2.3.2",
    "react-test-renderer": "17.0.1",
    "typescript": "3.8.3"
  },
  "resolutions": {
    "@types/react": "17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "lint-staged": {
    "*": "prettier --write"
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/"
  ],
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
